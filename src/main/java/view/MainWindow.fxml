<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import view.NetworkComponent?>
<?import javafx.scene.layout.Pane?>
<?import java.net.URL?>

<!-- <?import view.NetworkComponent?> -->

<BorderPane fx:id="root" prefHeight="800.0"
	prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.MainWindowController">
	<center>
		<!-- <NetworkComponent></NetworkComponent> -->
		<Pane fx:id="canvasWrapper">
			<NetworkComponent fx:id="networkComponent"
				width="${canvasWrapper.width}" height="${canvasWrapper.height}"></NetworkComponent>
			<stylesheets>
				<URL value="@css.css" />
			</stylesheets>
		</Pane>
	</center>
	<top>
		<MenuBar BorderPane.alignment="CENTER">
			<menus>
				<Menu mnemonicParsing="false" text="Archivo">
					<items>
						<MenuItem mnemonicParsing="false" text="Abrir"
							onAction="#openOnAction" />
						<MenuItem mnemonicParsing="false" text="Cerrar" />
					</items>
				</Menu>
				<Menu fx:id="problemsMenu" mnemonicParsing="false" text="Problemas">
				</Menu>
				<Menu mnemonicParsing="false" text="Ayuda">
					<items>
						<MenuItem mnemonicParsing="false" text="About" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
</BorderPane>
