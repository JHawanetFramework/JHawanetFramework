<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<?import view.NetworkComponent?>
<?import view.ElementViewer?>

<BorderPane fx:id="root" prefHeight="800.0"
	prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.MainWindowController">
	<center>
		<SplitPane fx:id = "splitPane">

			<ElementViewer fx:id="elementViewer" maxWidth="${splitPane.width * 0.20}"></ElementViewer>
			<!-- <NetworkComponent></NetworkComponent> -->
			<Pane fx:id="canvasWrapper">
				<NetworkComponent fx:id="networkComponent"
					width="${canvasWrapper.width}" height="${canvasWrapper.height}"></NetworkComponent>
			</Pane>
		</SplitPane>
	</center>
	<top>
		<MenuBar BorderPane.alignment="CENTER">
			<menus>
				<Menu mnemonicParsing="false" text="File">
					<items>
						<MenuItem mnemonicParsing="false"
							onAction="#openOnAction" text="Open" />
						<MenuItem mnemonicParsing="false" text="Close" />
					</items>
				</Menu>
				<Menu fx:id="monoobjectiveMenu" mnemonicParsing="false"
					text="Monoobjective Problems">
				</Menu>
				<Menu fx:id="multiobjectiveMenu" mnemonicParsing="false" text="Multiobjective Problems">
				</Menu>
				<Menu fx:id="runMenu" mnemonicParsing="false" text="Run">
					<items>
						<MenuItem fx:id="runMenuItem" mnemonicParsing="false" text="Run" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Help">
					<items>
						<MenuItem mnemonicParsing="false" text="About" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
</BorderPane>
